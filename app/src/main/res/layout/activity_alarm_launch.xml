<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

    <ImageView
        android:id="@+id/awakeImageViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/snoozeImageViewId"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/ic_turcoaz_button" />

    <ImageView
        android:id="@+id/snoozeImageViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/awakeImageViewId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/awakeImageViewId"
        app:layout_constraintTop_toTopOf="@+id/awakeImageViewId"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_turcoaz_button" />

    <TextView
        android:id="@+id/awakeTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Awake"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/awakeImageViewId"
        app:layout_constraintEnd_toEndOf="@+id/awakeImageViewId"
        app:layout_constraintStart_toStartOf="@+id/awakeImageViewId"
        app:layout_constraintTop_toTopOf="@+id/awakeImageViewId" />

    <TextView
        android:id="@+id/snoozeTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Snooze"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/snoozeImageViewId"
        app:layout_constraintEnd_toEndOf="@+id/snoozeImageViewId"
        app:layout_constraintStart_toStartOf="@+id/snoozeImageViewId"
        app:layout_constraintTop_toTopOf="@+id/snoozeImageViewId" />

</androidx.constraintlayout.widget.ConstraintLayout>